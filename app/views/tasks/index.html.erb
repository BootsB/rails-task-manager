<div class="list-group">
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <%= link_to "#{task.title}", task_path(task.id), class: "list-group-item list-group-item-action list-group-item-success" %>
    <% else %>
      <%= link_to "#{task.title}", task_path(task.id), class: "list-group-item list-group-item-action list-group-item-danger" %>
    <% end %>
  <% end %>
</div>
<br>
<%= link_to "Add new task", new_task_path, class: "btn btn-primary" %>
