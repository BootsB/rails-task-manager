<h1 class="mt-3"><strong>TO DO:</strong></h1>
<div class="list-group mt-3">
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <%= link_to "#{task.title}", task_path(task.id), class: "list-group-item list-group-item-action list-group-item-success w500" %>
    <% else %>
      <%= link_to "#{task.title}", task_path(task.id), class: "list-group-item list-group-item-action list-group-item-danger w500" %>
    <% end %>
  <% end %>
</div>
<br>
<%= link_to "Add new task", new_task_path, class: "btn btn-outline-primary" %>
